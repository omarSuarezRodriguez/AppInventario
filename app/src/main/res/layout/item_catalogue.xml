<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:id="@+id/container_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless">


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imgPhoto"
            android:src="@drawable/ic_fiber_manual_record"
            android:layout_width="@dimen/img_item_size"
            android:layout_height="@dimen/img_item_size"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/item_hint_nombre"
            android:maxLines="2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="@dimen/main_padding_small"
            android:layout_toEndOf="@id/imgPhoto"
            android:layout_toStartOf="@+id/tv_Orden"
            android:layout_centerVertical="true"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_Orden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/item_hint_orden"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="@dimen/main_padding_small"
            android:drawableBottom="@drawable/ic_sta"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>


    </RelativeLayout>







</android.support.v7.widget.CardView>